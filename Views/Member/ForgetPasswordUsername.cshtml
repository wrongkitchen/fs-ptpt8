@using Heji.Library.Models.TO
@using Heji.Web.Helpers
@model Heji.Web.Models.MemberForgotPasswordViewModel
@{
    ViewBag.Title = "ForgetPassword";
    Layout = "";
    string ImageServer = ViewContext.ViewData["ImageServer"].ToString();

}

<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js"> <!--<![endif]-->
<head>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
<title>Heji800.com 和記娛樂官方網站</title>
<meta name="description" content="">
<meta name="viewport" content="width=device-width">
<link rel="stylesheet" href="@ImageServer/Content/Styles/bootstrap.min.css">
<link rel="stylesheet" href="@ImageServer/Content/Styles/main.css">
<link rel="stylesheet" href="@ImageServer/Content/Styles/password.css">
<link rel="stylesheet" href="@ImageServer/Content/Styles/jquery.alerts.css" />
<script type="text/javascript" src="@ImageServer/Scripts/Plugins/jquery-1.8.3.min.js"></script>
<script type="text/javascript" src="@ImageServer/Scripts/Custom/ForgetPassword.js"></script>
<script type="text/javascript" src="@ImageServer/Scripts/Plugins/jquery.alerts.js"></script>
<!-- Place favicon.ico and apple-touch-icon.png in the root directory -->
</head>
<body>
<div id="wrapper">
    <div id="header">
        <div>忘记密码 RESET PASSWORD</div>
    </div>
    <div id="content">
            <table>
                <tr>
                    <td class="cellTitle"></td>
                    <td class="cellContent">@Model.CurrentUser.UserName,请设置密码</td>
                </tr>
                <tr>
                    <td class="cellTitle">密码：</td>
                    <td class="cellContent"><input name="Password1" type="password" class="input2" id="Password1" size="10" maxlength="30" /></td>
                </tr>
                <tr>
                    <td class="cellTitle">确认密码：</td>
                    <td class="cellContent"><input name="Password2" type="password" class="input2" id="Password2" size="10" maxlength="30" /></td>
                </tr>
                <tr>
                    <td class="cellTitle"></td>
                    <td class="cellContent"><button class="redButton" id="Password">提交</button></td>
                </tr>
            </table>
    </div>
</div>
</body>
</html>
