@using Heji.Library.Models.TO
@using Heji.Web.Helpers
@model Heji.Web.Models.MemberForgotPasswordViewModel
@{
    ViewBag.Title = "ForgetPassword";
    Layout = "";
    string ImageServer = ViewContext.ViewData["ImageServer"].ToString();

}

<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js"> <!--<![endif]-->
<head>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
<title>大奖娱乐官方网站</title>
<meta name="description" content="">
<meta name="viewport" content="width=device-width">
<link rel="stylesheet" href="@ImageServer/Content/Styles/bootstrap.min.css">
<link rel="stylesheet" href="@ImageServer/Content/Styles/main.css">
<link rel="stylesheet" href="@ImageServer/Content/Styles/password.css">
<link rel="stylesheet" href="@ImageServer/Content/Styles/jquery.alerts.css" />
<script type="text/javascript" src="@ImageServer/Scripts/Plugins/jquery-1.8.3.min.js"></script>
<script type="text/javascript" src="@ImageServer/Scripts/Custom/ForgetPassword.js"></script>
<script type="text/javascript" src="@ImageServer/Scripts/Plugins/jquery.alerts.js"></script>
<!-- Place favicon.ico and apple-touch-icon.png in the root directory -->
</head>
<body>
<div id="wrapper">
    <div id="header">
        <div>忘记密码 RESET PASSWORD</div>
    </div>
    <div id="content">
            <table>
                <tr>
                    <td class="cellTitle">用户名</td>
                    <td class="cellContent"><input type="text" name="Username" id="Username" /></td>
                </tr>
                <tr>
                    <td class="cellTitle">您设定的密保问题：</td>
                    <td class="cellContent">
                        <select id="Question" name="Question">
                            <option value="">---请选择密保问题---</option>
                        @if (Model.DefaultQuestion != null)
                        {
                            foreach (UserSecurityDefaultQuestionTO usdq in Model.DefaultQuestion)
                            {
                                <option value="@usdq.Question">@usdq.Question</option>
                            }
                        }
                        </select>
                    </td>
                </tr>
                <tr>
                    <td class="cellTitle">您设定的密保答案：</td>
                    <td class="cellContent"><input type="text" name="Answer" id="Answer" /></td>
                </tr>
                <tr>
                    <td class="cellTitle"></td>
                    <td class="cellContent"><button class="redButton" id="Infosecurity">提交</button></td>
                </tr>
                <tr>
                    <td class="cellTitle"></td>
                    <td class="cellContent cellRight"><a href="@Url.Action("ForgetPasswordEmail", "Member")" target="_self">使用邮箱重设密码</a></td>
                </tr>
            </table>
    </div>
</div>
</body>
</html>
