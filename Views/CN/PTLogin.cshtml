@using Heji.Library.Game;
@{
    ViewBag.Title = "欢迎进入大奖娱乐官方网站";
    Layout = null;
    string ImageServer = ViewContext.ViewData["ImageServer"].ToString();
}
<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js"> <!--<![endif]-->
<head>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
<title>@ViewBag.Title</title>
<meta name="description" content="" />
<meta name="viewport" content="width=device-width" />
@*<link rel="stylesheet" href="@ImageServer/Content/Styles/bootstrap.min.css" />*@
<link rel="stylesheet" href="@ImageServer/Content/Styles/main.css" />
<link rel="stylesheet" href="@ImageServer/Content/Styles/ptlogin.css" />
<link rel="stylesheet" href="@ImageServer/Content/Styles/jquery.alerts.css" />

<script type="text/javascript" src="@ImageServer/Scripts/Plugins/jquery-1.8.3.min.js"></script>
<script type="text/javascript" src="@ImageServer/Scripts/Plugins/jquery.alerts.js"></script>
<script type="text/javascript" src="@ImageServer/Scripts/Custom/common.js"></script>
<script type="text/javascript" src="@ImageServer/Scripts/Plugins/jquery.colorbox-min.js"></script>
@*<script type="text/javascript" src="@ImageServer/Scripts/Custom/ForgetPassword.js"></script>*@
<script type="text/javascript" src="@ImageServer/Scripts/Custom/ptlogin.js"></script>
<!-- Place favicon.ico and apple-touch-icon.png in the root directory -->
<style>
    .loginPopupWrap .loginPopupPanel h3{ font-size:20px; color:#FFF; padding: 20px 20px 10px 20px; margin: 0; color:#B6A256; }
</style>
</head>
<body style="background-image:url(@ImageServer/Content/Images/login_bg.jpg); background-repeat:no-repeat; background-position:top center;">
@Html.Action("SharedNotice", "CN")
<div id="wrapper" style="width:284px;">
    <div class="loginPopupWrap" style="margin-top:180px">
        <div class="pull-left loginPopupPanel">
            <div class="clearfix"></div>
            <h3>出纳柜台</h3>
            <div id="content" style="width:250px;">
                <table style="margin-top:10px">
                    <tr>
                        <td width="15">&nbsp;</td>
                        <td class="cellContent"><input type="text" style="width:220px" name="userName" id="userName" value="@ViewBag.UserName" /></td>
                    </tr>
                    <tr>
                        <td width="15">&nbsp;</td>
                        <td class="cellContent"><input type="password" style="width:220px" name="password" id="password" /><input type="hidden" name="pt" id="pt" value="ptuser" />
                        </td>
                    </tr>
                    <tr>
                        <td>&nbsp;</td>
                        <td>
                            <table style="margin-top:0;">
                                <tr>
                                    <td class="cellContent">
                                        <button class="redButton" id="Infosecurity">转入额度</button>
                                    </td>
                                    <td width="50">&nbsp;</td>
                                    <td>
                                        <div id="shared_login_loader" class="pull-left" style="color: Red; display: none;">
                                            <img src="@ImageServer/Content/Images/ajax-loader.gif" style="vertical-align: baseline;" alt="" />
                                        </div>                                       
                                    </td>
                                </tr>
                            </table>
                            <table style="color:#FFF; width:auto; margin:0; padding:0;">
                                <tr>
                                    <td width="10"><input type="checkbox" id="checkbox" /></td>
                                    <td>记住密码</td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
            </div>
        </div><br />
        <div style="color:white">
            如需要帮助，请随时联系大奖娱乐<a style="color:#0085ff;" href="http://kf1.learnsaas.com/chat/chatClient/chatbox.jsp?companyID=17819&jid=&enterurl=@Request.Url.Host" target="_blank" >在线客服</a>
        </div>
        <table style="margin:20px auto;">
            <tr>
                <td valign="middle" class="greyButton"><a style="color:#FFF; text-decoration:none;" href="#">进入官网</a></td>
                <td width="10">&nbsp;</td>
                <td valign="middle" class="greyButton"><a style="color:#FFF; text-decoration:none;" href="#">最新优惠</a></td>
            </tr>
        </table>
        <div class="clearfix"></div>
    </div>
</div>
</body>
</html>








